<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/affichageListeEspacesDeTravail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/affichageEspaceDeTravail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_cell_background"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/nomEspaceDeTravail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionEspaceDeTravail"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/indiceDeConfortEspaceDeTravail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/disponibiliteEspaceDeTravail"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/favoriEspaceDeTravail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_star_big_on" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


